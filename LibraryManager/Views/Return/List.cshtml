@model IEnumerable<Book>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Author Name</th>
            <th>Borrower Name</th>
            <th>Return Book</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.BookId</td>
                <td>@book.Title</td>
                <td>@book.Author.Name</td>
                <td>@book.Borrower.Name</td>
                <td><a class="btn btn-info" asp-area="" asp-controller="Return" asp-action="ReturnBook" asp-route-id="@book.BookId">Return Book</a></td>
            </tr>
        }
    </tbody>
</table> 